
<!-- All Posts Page -->

<style>


.page-title {
    font-family: cambria;
    font-size: 42px;
    font-weight: bold;
    position: relative;
    float: left;
}

.new-post {
    position: relative;
    float: left;
    margin-top: 24px;
    margin-left: 20px;
}

#post-title {
    font-size: 30px;
    font-weight: bold;
    line-height: 30px;
    position: relative;
    float: left;
}

.badge {
    float: left;
    margin-left: 15px;
    margin-top: 8px;
    background-color: red;
}

.post-box {
   border:2px solid white;
    border-radius: 6px;
    padding: 10px;
    background-color: #f4f4f4;
    box-shadow: 1px 2px 3px #333; 
    margin-top: 20px;
    margin-bottom: 20px;
}

small {
    font-size: 18px;
}

.clear-fix {
    clear: both;
}



</style>


<h1 class="page-title">All Posts</h1>
<% if policy(Post.new).create? %>
    <%= link_to "New Post", new_post_path, class: 'new-post btn btn-success' %>
<% end %>

<div class="clear-fix"></div>

<% @posts.each do |post| %>
    
        <div class="post-box">
            
                <p id="post-title"><%= link_to post.title, post %></p>     
                      
                        <p class="badge"><%= post.comments.count %></p>
                     
                    <div class="clear-fix"></div>
                    <small>
                        submitted <%= time_ago_in_words(post.created_at) %> ago by <em><strong><%= post.user.name %></strong></em><br/>
                    </small>
                               
            
        
    </div>
<% end %>
