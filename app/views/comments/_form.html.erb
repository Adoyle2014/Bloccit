<%= form_for [topic, post, comment] do |f| %>
  <% if comment.errors.any? %>
    <div class="new-edit-alert alert alert-danger">
      <h4>There are <%= pluralize(comment.errors.count, "error") %> errors.</h4>
      <ul>
        <% comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(comment.errors[:body]) do %>
    
   <div class="form-group"> 
    <p>Do you have a comment about this post?</p>
    <%= f.text_area :body, rows: 2, class: 'form-control', placeholder: "Enter Comment" %>
  </div>
  <% end %>
  
  <div class="form-group">
    <%= f.submit "Add Comment", class: 'btn btn-success' %>
  </div>
<% end %>